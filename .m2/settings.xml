<settings>
    <servers>
        <server>
            <id>${repo.id}</id>
            <username>${repo.username}</username>
            <password>${repo.password}</password>
        </server>
        <server>
            <id>${gpg.GPG_ID}</id>
            <passphrase>${gpg.GPG_KEY}</passphrase>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>sign</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.keyname>${env.GPG_Id}</gpg.keyname>
                <gpg.passphrase>${gpg.GPG_KEY}</gpg.passphrase>
            </properties>
        </profile>
    </profiles>
</settings>
